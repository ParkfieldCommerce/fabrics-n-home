<nav class="mobile-menu">
	<div class="container">
		{% for link in linklists['main-menu'].links %}
			{% assign handle = link.handle %}
			<ul class="mobile-items {% if link.active %}active{% else %}inactive{% endif %}" data-main-title="{{link.title}}">
				{% for childlink in linklists[handle].links %}
					<li class="mobile-item" data-main-title="{{link.title}}" data-child-url="https:{{shop.url}}{{childlink.url}}">
						<a href="{{ childlink.url }}">
							<p>{{ childlink.title }}</p>
						</a>
						{% include 'dropdown-menu' %}
					</li>
				{% endfor %}
			</ul>
		{% endfor %}
	</div>
</nav>