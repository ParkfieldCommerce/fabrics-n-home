<!-- /snippets/collection-product.liquid -->

{% unless column_width %}
 {% assign column_width = 'column l4 m6 s12' %}
{% endunless %}

{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
 {% assign on_sale = true %}
{% endif %}
{% assign sale_price = product.price | money %}

{% assign sold_out = true %}
{% if product.available %}
 {% assign sold_out = false %}
{% endif %}

<div class="{{column_width}} product-block {% if sold_out %} sold_out {% endif %} {% if on_sale %} on_sale {% endif %}">

  <a class="image" href="{{ product.url | within: collection }}" style="background: url({{ product.featured_image.src | img_url: 'master' }});
    background-position: 50% 50%;
    background-size: cover;">

    <p>
      {% if on_sale %}

        {% if product.price_varies %}
          {{ 'product.on_sale_from_html' | t: price: sale_price }}/Yard
        {% else %}
          <strong>{{ 'product.on_sale_html' | t: price: sale_price }}/Yard</strong>
        {% endif %}

      {% else %}

        {% if product.price_varies %}
          {% assign price = product.price | money %}
          {{ 'product.priced_from_html' | t: price: price }}/Yard
        {% else %}
          {{ product.price | money }}/Yard
        {% endif %}

      {% endif %}
    </p>

  </a>

  <a class="product-title" href="{{ product.url | within: collection }}">
    <p>{{ product.title }}</p>
  </a>

</div>