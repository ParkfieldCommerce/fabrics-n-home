<div class="sidebar">

  {% for link in linklists['sidebar-menu'].links %}
	  <div class="accordion">
	  	<div class="main">
	  		<h3>{{ link.title }}</h3>
	  		{% include 'icon' with 'chevron-down' %}
	  	</div>
	    <div class="pane">
	    	{% for childlink in link.links %}
          {%- if link.title == 'Color' -%}
            <a href="{{shop.url}}{{ childlink.url }}">
              <i class="fa fa-circle" style="color: {{childlink.title}}"></i>
              <p>{{ childlink.title }}</p>
            </a>
          {%- elsif link.title == 'Brands' -%}
            <a href="{{shop.url}}{{ childlink.url }}">
              <p>{{ childlink.title }} /</p>
            </a>
          {%- else -%}
            <a href="{{shop.url}}{{ childlink.url }}">
              <p>{{ childlink.title }}</p>
            </a>
          {%- endif -%}
	    	{% endfor %}
	    </div>
	  </div>
  {% endfor %}

</div>
