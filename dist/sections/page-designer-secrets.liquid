{% assign settings = section.settings %}
<style>
	.mobile-banner {
		background: linear-gradient(
			rgba(0,0,0,0.4),
			rgba(0,0,0,0.4)
			),
		url({{ settings.banner_img | img_url:'master' }});
	}

	.img-div {
		background: url({{ settings.banner_img | img_url:'master' }});
	}

	.left-block {
		background: url({{ settings.first_half_img | img_url:'master' }});
	}

	.right-block {
		background: url({{ settings.second_half_img | img_url:'master' }});
	}

	.mobile-banner,
	.img-div,
	.left-block,
	.right-block {
		background-position: 50% 50%;
		background-size: cover;
	}
</style>
<script>
	$('.secondary-items[data-main-title="Fabric & Wallcovering"]').hide();
</script>
<section class="designer-secrets">
	<div class="container l">
		<div class="main-banner">

				{% capture text_area %}
					<div class="desktop-banner s-hide">
						<h1 class="title">{{ settings.main_banner_title }}</h1>
						<h4 class="lead">{{ settings.secondary_banner_text }}</h4>
					</div>
					<div class="mobile-banner l-hide m-hide">
						<h1 class="title">{{ settings.main_banner_title }}</h1>
						<h4 class="lead">{{ settings.secondary_banner_text }}</h4>
					</div>
				{% endcapture %}

				{% if settings.banner_alignment == 'left' %}
					{{ text_area }}
				{% endif %}

				<div class="img-div s-hide">
				</div>

				{% if settings.banner_alignment == 'right' %}
					{{ text_area }}
				{% endif %}

		</div>

		<div class="double-banners">
			<div class="row">
				<div class="column l6 m6 s12">
					<div class="left-block">

						<div class="block-text {% if settings.first_half_alignment == 'left' %}align-left{% elsif settings.first_half_alignment == 'right' %}align-right{% endif %}" style="background: {{ settings.first_half_color | color_modify: 'alpha', 0.6 }}">
							<h1 class="title">{{ settings.first_half_title }}</h1>

							{% if settings.first_half_btn_text %}
								<div class="action">
									<a class="btn primary-btn" href="{{ settings.first_half_url }}">{{ settings.first_half_btn_text }}</a>
								</div>
							{% endif %}

						</div>

					</div>
				</div>
				<div class="column l6 m6 s12">
					<div class="right-block">

						<div class="block-text {% if settings.second_half_alignment == 'left' %}align-left{% elsif settings.second_half_alignment == 'right' %}align-right{% endif %}" style="background: {{ settings.second_half_color | color_modify: 'alpha', 0.6 }}">
							<h1 class="title">{{ settings.second_half_title }}</h1>

							{% if settings.second_half_btn_text %}
								<div class="action">
									<a class="btn primary-btn" href="{{ settings.second_half_url }}">{{ settings.second_half_btn_text }}</a>
								</div>
							{% endif %}

						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Designer Secrets",
	"settings": [
		{
			"type": "header",
			"content": "Main Banner"
		},
		{
			"type": "select",
			"id": "banner_alignment",
			"label": "Text Alignment",
			"options": [
				{ "value": "left", "label": "Left Aligned" },
				{ "value": "right", "label": "Right Aligned" }
			]
		},
		{
			"type": "image_picker",
			"id": "banner_img",
			"label": "Banner Image"
		},
		{
			"type": "text",
			"id": "main_banner_title",
			"label": "Main Banner Title"
		},
		{
			"type": "textarea",
			"id": "secondary_banner_text",
			"label": "Secondary Banner Text"
		},
		{
			"type": "header",
			"content": "Left Box"
		},
		{
			"type": "select",
			"id": "first_half_alignment",
			"label": "Text Alignment for Left Box",
			"options": [
				{ "value": "left", "label": "Left Aligned" },
				{ "value": "right", "label": "Right Aligned" }
			]
		},
		{
			"type": "image_picker",
			"id": "first_half_img",
			"label": "Left Box Image"
		},
		{
			"type": "color",
			"id": "first_half_color",
			"label": "Background Color"
		},
		{
			"type": "text",
			"id": "first_half_title",
			"label": "Left Box Title"
		},
		{
			"type": "url",
			"id": "first_half_url",
			"label": "Left Box url"
		},
		{
			"type": "text",
			"id": "first_half_btn_text",
			"label": "Button Text",
			"default": "Shop Now"
		},
		{
			"type": "header",
			"content": "Right Box"
		},
		{
			"type": "select",
			"id": "second_half_alignment",
			"label": "Text Alignment for Right Box",
			"options": [
				{ "value": "left", "label": "Left Aligned" },
				{ "value": "right", "label": "Right Aligned" }
			]
		},
		{
			"type": "image_picker",
			"id": "second_half_img",
			"label": "Right Box Image"
		},
		{
			"type": "color",
			"id": "second_half_color",
			"label": "Background Color"
		},
		{
			"type": "text",
			"id": "second_half_title",
			"label": "Right Box Title"
		},
		{
			"type": "url",
			"id": "second_half_url",
			"label": "Right Box url"
		},
		{
			"type": "text",
			"id": "second_half_btn_text",
			"label": "Button Text",
			"default": "View Now"
		}
	]
}
{% endschema %}
