<!-- /snippets/theme-header.liquid -->

{% assign logo = section.settings.logo %}
{% assign logo_mobile = section.settings.logo_mobile %}
{% assign logo_width = section.settings.logo_width %}
{% assign enable_search = section.settings.enable_search %}
{% assign include_results = '' %}
{% if section.settings.include_products %}
  {% assign include_results = '' | append: 'product,' %}
{% endif %}
{% if section.settings.include_articles  %}
  {% assign include_results = '' | append: 'articles,' %}
{% endif %}
{% if section.settings.include_pages %}
  {% assign include_results = '' | append: 'pages,' %}
{% endif %}
{% assign include_results = include_results | append: '[last]' | remove: ',[last]' | remove: '[last]' %}

{% include 'header-layout-desktop' %}
{% include 'header-layout-mobile' %}
{% include 'main-menu' %}
{% include 'mobile-menu' %}

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "checkbox",
        "id": "logo_use_image",
        "label": "Use custom logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "image_picker",
        "id": "logo_mobile",
        "label": "Mobile Logo image"
      },
      {
        "type": "text",
        "id": "logo_width",
        "label": "Logo width",
        "default": "100",
        "info": "This should be 50% of the width of the image you uploaded. Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "header",
        "content": "Search"
      },
      {
        "type": "checkbox",
        "id": "enable_search",
        "label": "Enable search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "include_products",
        "label": "Include product results",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "include_articles",
        "label": "Include article results",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "include_pages",
        "label": "Include page results",
        "default": true
      }
    ]
  }
{% endschema %}
