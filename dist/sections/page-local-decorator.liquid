{% capture alignment %}
	{% if section.settings.main_alignment == 'left' %}
		align-left
	{% elsif section.settings.main_alignment == 'center' %}
		align-center
	{% elsif section.settings.main_alignment == 'right' %}
		align-right
	{% endif %}
{% endcapture %}

<section class="local-decorator">
	<div class="container l">
		<div class="banner">
			<div class="text-container {{ alignment }}">
				<h1 class="title">{{ section.settings.banner_text }}</h1>		
			</div>		
		</div>
		<div class="">
			
		</div>
	</div>
</section>

