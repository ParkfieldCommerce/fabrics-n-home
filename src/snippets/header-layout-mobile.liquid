{% include 'header-menu-mobile' %}

<header class="theme-header mobile" role="banner">
	<div class="container s">
		<div class="row">
			<div class="column s12">
				{{ banner_menu }}
			</div>
		</div>
		<div class="main">
			<div class="row">

				<div class="column s3">
					<div class="mb-menu">
						<i class="fa fa-bars fa-2x"></i>
					</div>
				</div>

				<div class="column s6">
					{% include 'header-logo-mobile' %}
				</div>

				<div class="column s3">

					<div class="cart">
						<a href="/cart" id="CartLink" data-trigger="popup" data-target="#PopupCart.popup" aria-controls="Cart" aria-expanded="false" class="v-middle">
				      <i class="fa fa-shopping-bag"></i>
				    </a>
					</div>
					<div class="search">
						<a class="fa fa-search" id="mb-header-search"></a>
					</div>

				</div>
				
			</div>
		</div>
	</div>
