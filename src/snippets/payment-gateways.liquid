<!-- /snippets/payment-gateways.liquid -->

{% assign icons = true %}

{% unless shop.enabled_payment_types == empty %}
  {% assign payment_icons_available = 'paypal,visa' | split: ',' %}
  <ul class="payment-icons">
    {% for gateway in shop.enabled_payment_types %}
      {% if payment_icons_available contains gateway %}
        <li>
          {% if icons %}
            {% include 'icon' with gateway %}
          {% else %}
            {{ gateway | camelcase | replace:'_',' ' }}
          {% endif %}
        </li>
      {% endif %}
    {% endfor %}
  </ul>
{% endunless %}
