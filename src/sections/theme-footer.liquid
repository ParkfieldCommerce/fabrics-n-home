<!-- /snippets/theme-footer.liquid -->

{% assign heading = section.settings.heading %}
{% assign logo = section.settings.logo %}
{% assign email_placeholder = section.settings.email_placeholder %}
{% assign button_text = section.settings.button_text %}
{% assign success = section.settings.success %}
{% assign show_button = section.settings.show_button %}


{% include 'footer-layout-desktop' %}
{% include 'footer-layout-mobile' %}

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "image_picker",
        "id": "logo_mobile",
        "label": "Mobile Logo image"
      },
      {
        "type": "checkbox",
        "id": "enable_social",
        "label": "Show social media icons"
      },
      {
        "type": "checkbox",
        "id": "enable_gateway_icons",
        "label": "Show payment gateway icons",
        "info": "Relevant payment icons will appear automatically when configured in [Payment Settings](/admin/settings/payments)"
      },
      {
        "type": "header",
        "content": "Subscribe form"
      },
      {
        "type": "checkbox",
        "id": "enable_subscribe",
        "label": "Show subscribe form"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Title",
        "placeholder": "Subscribe"
      },
      {
        "id": "email_placeholder",
        "type": "text",
        "placeholder": "Email",
        "label": "Email Placeholder",
        "default": "Email"
      },
      {
        "id": "show_button",
        "type": "checkbox",
        "default": true,
        "label": "Show button"
      },
      {
        "id": "success",
        "type": "text",
        "placeholder": "Thank you for subscribing",
        "label": "Confirmation message",
        "default": "Thank you for subscribing"
      },
      {
        "id": "button_text",
        "type": "text",
        "label": "Button Text",
        "default": "Subscribe"
      },
      {
        "type": "header",
        "content": "Contact Us"
      },
      {
        "type": "text",
        "id": "contact_num",
        "label": "Contact number"
      },
      {
        "type": "text",
        "id": "contact_hours",
        "label": "Hours of Operation"
      },
      {
        "type": "text",
        "id": "contact_email",
        "label": "Contact Email"
      },
      {
        "type": "url",
        "id": "contact_url",
        "label": "URL for 'Send Us a Message'"
      }
    ]
  }
{% endschema %}
