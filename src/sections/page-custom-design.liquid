{% assign set = section.settings %}
<style>
  .main-banner {
    background: linear-gradient(
      rgba(0,0,0,0.0),
      rgba(0,0,0,0.0)
      ),
      url({{ set.main_banner | img_url:'master' }});
  }
  .bottom-banner {
    background: linear-gradient(
      rgba(0,0,0,0.0),
      rgba(0,0,0,0.0)
      ),
      url({{ set.bottom_banner | img_url:'master' }});
  }
  .box.one {
    background: linear-gradient(
      rgba(0,0,0,0.1),
      rgba(0,0,0,0.1)
      ),
      url({{ set.custom_1_img | img_url:'master' }});
  }
  .box.two {
    background: linear-gradient(
      rgba(0,0,0,0.1),
      rgba(0,0,0,0.1)
      ),
      url({{ set.custom_2_img | img_url:'master' }});
  }
  .box.three {
    background: linear-gradient(
      rgba(0,0,0,0.1),
      rgba(0,0,0,0.1)
      ),
      url({{ set.custom_3_img | img_url:'master' }});
  }
  .box.one,
  .box.two,
  .box.three,
  .main-banner,
  .bottom-banner {
    background-position: 50% 50%;
    background-repeat: no-repeat;
    background-size: 105%;
  }
</style>
<section class="custom-design">
  <div class="container l">
    <div class="main-banner">
      <h1>{{ set.main_banner_lead }}</h1>
    </div>
    <div class="custom-design-links">
      <h2>Custom Design Made to Order</h2>
      <div class="three-boxes">
        <div class="box one">
          <a href="{{ set.custom_1 }}">
            <div class="heading-container">
              <h3>{{ set.custom_1_heading }}</h3>
            </div>
            <div class="lead-container">
              <h3>{{ set.custom_1_hover_head }}</h3>
              <div class="line-br"></div>
              <p>{{ set.custom_1_hover_lead }}</p>
            </div>
          </a>
        </div>
        <div class="box two">
          <a href="{{ set.custom_2 }}">
            <div class="heading-container">
              <h3>{{ set.custom_2_heading }}</h3>
            </div>
            <div class="lead-container">
              <h3>{{ set.custom_2_hover_head }}</h3>
              <div class="line-br"></div>
              <p>{{ set.custom_2_hover_lead }}</p>
            </div>
          </a>
        </div>
        <div class="box three">
          <a href="{{ set.custom_3 }}">
            <div class="heading-container">
              <h3>{{ set.custom_3_heading }}</h3>
            </div>
            <div class="lead-container">
              <h3>{{ set.custom_3_hover_head }}</h3>
              <div class="line-br"></div>
              <p>{{ set.custom_3_hover_lead }}</p>
            </div>
          </a>
        </div>
      </div>
    </div>
    <div class="bottom-banner">
      <h1>{{ set.bottom_banner_lead }}</h1>
      {% if set.bot_ban_url_txt != empty %}
        <a class="btn primary-btn" href="{{ set.bot_ban_btn }}">{{ set.bot_ban_url_txt }}</a>
      {% endif %}
    </div>
  </div>
</section>
<script>
  var box = document.querySelectorAll('.box');
  var duration = { duration: 300 };
  var hide = { opacity: 0, visibility: 'hidden' };
  var show = { opacity: 1, visibility: 'visible' };
  var zoomIn = { backgroundSize: '115%' };
  var zoomOut = { backgroundSize: '105%' };
  for (var i = 0; i < box.length; i++) {
    box[i].addEventListener('mouseenter', function(e) {
      var target = e.target;
      if (target) {
        var heading = target.querySelector('.heading-container');
        var lead = target.querySelector('.lead-container');
        target.velocity(zoomIn, duration);
        heading.velocity(hide, duration);
        lead.velocity(show, duration);
      }
    });
    box[i].addEventListener('mouseleave', function(e) {
      var target = e.target;
      if (target) {
        var heading = target.querySelector('.heading-container');
        var lead = target.querySelector('.lead-container');
        target.velocity(zoomOut, duration);
        heading.velocity(show, duration);
        lead.velocity(hide, duration);
      }
    });
  }
</script>

